<% layout('layouts/boilerplate') %>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-3">
                        <%= todolist.title %>
                    </h2>
                    <p class="card-text mb-4">
                        <%= todolist.content %>
                    </p>
                    <div class="d-flex gap-2">
                        <a href="/todolists/<%= todolist._id %>/edit" class="btn btn-outline-secondary">編集する</a>
                        <form action="/todolists/<%= todolist._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-outline-danger" onclick="return confirm('本当に削除しますか？');">削除する</button>
                        </form>
                        <a href="/todolists" class="btn btn-link">一覧に戻る</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


