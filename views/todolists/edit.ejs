<% layout('layouts/boilerplate') %>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title mb-4">ToDoの編集</h2>
                    <form action="/todolists/<%= todolist._id %>?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label for="title" class="form-label">タイトル</label>
                            <input type="text" id="title" name="todolist[title]" class="form-control"
                                value="<%= todolist.title %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="content" class="form-label">内容</label>
                            <textarea id="content" name="todolist[content]" class="form-control" rows="3"
                                required><%= todolist.content %></textarea>
                        </div>
                        <button class="btn btn-primary">更新する</button>
                        <a href="/todolists" class="btn btn-link">一覧に戻る</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

